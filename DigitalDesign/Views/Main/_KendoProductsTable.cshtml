@using DigitalDesign.Models

<div class="text-center">
    <h2>Kendo UI Grid</h2>
    @(Html.Kendo().Grid<ProductViewModel>()
        .Name("grid")
        .Columns(columns =>
        {
            columns.Bound(c => c.Title).Width(100);
            columns.Bound(c => c.Category).Width(300);
            columns.Bound(c => c.Country).Width(100);
        })
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("Products", "Main"))
        )
    )
</div>
